#header
  .row
    #logo.col-md-6.col-sm-12
      = link_to 'トップページ', root_path
    #menus.col-md-6.col-sm-12
      .nav
        %ul
          %li{class: controller_name == 'questions' && action_name != 'new' && action_name != 'edit' ? 'active' : ''}
            = link_to '質問', questions_path
          %li{class: controller_name == 'tags' ? 'active' : ''}
            = link_to 'タグ', tags_path
          %li{class: controller_name == 'users' ? 'active' : ''}
            %a{href: '#'} ユーザ
          %li
            %a{href: '#'} 未回答
          %li{class: controller_name == 'questions' && (action_name == 'new' || action_name == 'edit') ? 'active' : ''}
            = link_to '質問する', new_question_path

