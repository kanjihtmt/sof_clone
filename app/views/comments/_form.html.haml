= simple_form_for([@commentable, @comment], remote: true) do |f|
  = f.input :body, label: false, input_html: {rows: 3, class: 'textarea'}
  = f.hidden_field :commenter_id, value: current_user.id
  = f.hidden_field :question_id, value: @question

  .actions
    = f.button :submit , 'コメントする', {class: 'btn btn-primary'}
